# IMPORTANTE. EL ARCHIVO ESTA CODIFCADO EN windows-1252. Kivy para python 3 lee los
# archivos en esa codificación de forma automática y no muestra los caracteres
# correctamente si está en UTF-8
<YoutubePopup>:
    grabadorui:
    on_open: self.grabadorui.crear_guardador_youtube(*args)
    on_dismiss: self.grabadorui.quitar_popup(*args)
    size_hint: None, None
    size: 500, 500
    title:"Elige la pestaña"
    BoxLayout:
        orientation: "vertical"
        Etiqueta:
            color:
        VistaScroll:
            id: vista_scroll


<GrabadorUi>:
    orientation: "vertical"
    padding: 30
    spacing: 20
    Etiqueta:
        text: "Grabador"
        halign: "center"
        font_size: 30
    ToggleButton:
        text: "Grabar"
        id: grabartoggle
        size_hint_y: None
        height: 50
        on_state: root.toggle_grabar(*args)
    AskToggleButton:
        text: "Pausar"
        id: pausartoggle
        size_hint_y: None
        height: 50
        check_permission: root.permitir_pausartoggle
        on_state: root.toggle_pausar(*args)
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        BoxLayout:
            orientation: "vertical"
            Etiqueta:
                text: "Output"
                font_size: 20
            Spinner:
                size_hint_y: None
                height: 60
                id:outputs
                on_text: root.change_output(*args)
        BoxLayout:
            orientation: "vertical"
            Etiqueta:
                text: "Input"
                font_size: 20
            Spinner:
                size_hint_y: None
                height: 60
                id:inputs
                on_text: root.change_input(*args)
    GridLayout:
        cols:2
        BoxLayout:
            orientation: "vertical"
            Etiqueta:
                text: "Rate"
            DatosInput:
                id: rate
                text: "48000"
                input_filter: "int"
                on_text: root.change_rate(*args)
        Switch:
        BoxLayout:
            orientation: "vertical"
            Etiqueta:
                text: "Channels"
            DatosInput:
                id: channels
                input_filter: "int"
                text: "2"
                on_text: root.change_channels(*args)

        Switch:
        BoxLayout:
            orientation: "vertical"
            Etiqueta:
                text: "Format"
            DatosInput:
                id: format
                text: "16"
                input_filter: "int"
                on_text: root.change_format(*args)
        Switch:
        BoxLayout:
            orientation: "vertical"
            Etiqueta:
                text: "Tiempo de grabación mínimo."
            DatosInput:
                id: min_time
                text: "60"
                input_filter: "int"
                on_text: root.change_min_time(*args)
        Switch:
        BoxLayout:
            orientation: "vertical"
            ToggleButton:
                text:"Modo Youtube"
                id:youtubetoggle
                on_state: root.toggle_youtube(*args)
            Button:
                text:"Saltar este video"
                id:youtubetoggle
                on_press: root.saltar_video()
